{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"group": {"kind": "build", "isDefault": true},
			"problemMatcher": ["$haxe", "$haxe-absolute", "$haxe-error", "$haxe-trace"],
			"type": "shell", "command": "haxe", "args": ["run.hxml"]
		},
		{
			"label": "Clean",
			"group": "build",
			"type": "shell", "command": "lix", "args": ["Clean"]
		},
		{
			"label": "Doc",
			"group": "build",
			"type": "shell", "command": "lix", "args": ["Doc"]
		},
		{
			"label": "Install",
			"group": "build",
			"type": "shell", "command": "lix", "args": ["download"]
		},
		{
			"label": "Lint",
			"group": "build",
			"type": "shell", "command": "lix", "args": ["Lint"]
		},
		{
			"label": "Publish",
			"group": "build",
			"type": "shell", "command": "lix", "args": ["Publish"]
		},
		{
			"label": "Test",
			"group": {"kind": "test", "isDefault": true},
			"type": "shell", "command": "lix", "args": ["Test"]
		}
	]
}
